<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VirusGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="game_level_icon_style">
        <item name="android:layout_marginStart">@dimen/dp_56</item>
        <item name="android:layout_marginTop">@dimen/dp_52</item>
        <item name="android:layout_width">@dimen/dp_240</item>
        <item name="android:layout_height">@dimen/dp_120</item>
        <item name="android:background">@drawable/icon_common_001_step_01</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/maplestory_oft_bold</item>
        <item name="android:textSize">@dimen/sp_44</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="game_close_btn">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">@dimen/dp_72</item>
        <item name="android:layout_height">@dimen/dp_72</item>
        <item name="android:layout_marginEnd">@dimen/dp_56</item>
        <item name="android:layout_marginTop">@dimen/dp_52</item>
    </style>
</resources>